<%= simple_form_for @user do |f| %>

  <%= f.error_notification %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :photo_blob, :label => 'Upload a Profile Picture',
                           :as => :file %>
  <% if @current_user %>
    <%= f.submit "Save Changes", class: "btn" %>
  <% else %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.submit "Sign Up!", class: "btn" %>
  <% end %>

<% end %>