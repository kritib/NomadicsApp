<!DOCTYPE html>
<html>
<head>
  <title>NomadicsApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href='/'>Nomadics</a>
      <ul class="nav pull-right">

      	<%= render "shared/nav_bar" %>

      </ul>
    </div>
  </div>

  <div class="main">
    <% if flash[:special] %>
      <div id="notice"><%= flash[:special] %></div>
    <% end %>

    <%= yield %>
  </div>


</body>
</html>

