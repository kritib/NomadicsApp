<h1>Login</h1>

<%= form_tag "/sessions", :method => :post do %>	

	<%= label_tag :email, "E-mail:" %>
	<%= text_field_tag :email %>
	<br/>
	<%= label_tag :password, "Password:" %>
	<%= password_field_tag :password %>
	<br/>
	<%= submit_tag "login" %>
	<br/>
	<p>Not a user yet?</p>
	<%= button_to "Sign up", new_user_path, :method => :get %>

<% end %>


